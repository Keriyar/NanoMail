// 亮色主题颜色定义（MVP 仅此主题）
export global LightColors {
    // 背景色
    in property <color> background: #FFFFFF;
    in property <color> surface: #FFFFFF;

    // 文字颜色
    in property <color> text-primary: #000000;
    in property <color> text-secondary: #8E8E93;

    // 分隔线
    in property <color> separator: #E5E5E5;

    // 交互元素
    in property <color> button-hover: #F2F2F7;
    in property <color> button-active: #E5E5EA;

    // 徽章颜色
    in property <color> badge-success: #34C759;
    in property <color> badge-error: #FF3B30;

    // 品牌色
    in property <color> google-green: #34A853;

    // 应用状态颜色(用于标题首字母 "N" 的动态着色)
    in property <color> status-normal: #34A853;   // Google Green
    in property <color> status-unread: #EA4335;   // Google Red
    in property <color> status-error: #FBBC05;    // Google Yellow

    // 阴影
    in property <color> shadow: #00000026; // rgba(0,0,0,0.15)
}
